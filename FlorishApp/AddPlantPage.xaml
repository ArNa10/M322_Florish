<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="FlorishApp.AddPlantPage">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="0">

            <!-- HEADER -->
            <Grid BackgroundColor="{StaticResource PrimaryGreen}" Padding="15">
                <Image
                    Source="logo.png"
                    WidthRequest="80"
                    HeightRequest="80"/>
                
                <Label Text="Florish"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold" />
            </Grid>

            <!-- CONTENT -->
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">

                    <Label Text="Pflanze hinzuf체gen"
                           FontSize="20"
                           FontAttributes="Bold" />

                    <Entry 
                        x:Name="nameEntry"
                        TextColor="Black"
                        Placeholder="Name" />
                    <Label
                        x:Name="errorLabel"
                        TextColor="Red"
                        IsVisible="False" />

                    <Picker 
                        x:Name="artPicker"
                            BackgroundColor="#5AAB61"
                        Title="Art"
                        TitleColor="Black">
                        <Picker.Items>
                            <x:String>Zimmerpflanze</x:String>
                            <x:String>Gartenpflanze</x:String>
                        </Picker.Items>
                    </Picker>

                    <Picker 
                        x:Name="standortPicker"
                        BackgroundColor="#5AAB61"
                        Title="Standort"
                        TitleColor="Black">
                        <Picker.Items>
                            <x:String>Sonne</x:String>
                            <x:String>Halbschatten</x:String>
                            <x:String>Schatten</x:String>
                        </Picker.Items>
                    </Picker>

                    <Label Text="Giessintervall (Tage)" />
                    <Slider
                        x:Name="wasserSlider"
                        Minimum="1"
                        Maximum="30"
                        Value="7"/>
                    <Label
                        Text="{Binding Source={x:Reference wasserSlider}, Path=Value, StringFormat='{0:F0} Tage'}"/>

                    <Label Text="Letzte Bew채sserung"></Label>
                    <DatePicker
                        BackgroundColor="#5AAB61"
                        x:Name="datePicker"/>
                    
                    <HorizontalStackLayout Spacing="15">
                        <Label Text="Giftig f체r Menschen/Tiere"/>
                        <CheckBox x:Name="giftigCheckBox"/>
                    </HorizontalStackLayout>
                    
                    <!-- BUTTONS -->
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Abbrechen"
                                Clicked="OnCancelClicked"
                                BackgroundColor="#CCCCCC"
                                TextColor="Black"
                                HorizontalOptions="FillAndExpand" />

                        <Button Text="Pflanze hinzuf체gen"
                                Clicked="OnAddPlantClicked" 
                                BackgroundColor="{StaticResource PrimaryGreen}"
                                TextColor="White"
                                HorizontalOptions="FillAndExpand" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>